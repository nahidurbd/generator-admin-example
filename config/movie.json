{
  "moduleName": "videos",
  "modelName": "movie",
  "items": [
    {
      "name": "title",
      "alias": "视频名称",
      "display_as": "input",
      "placeholder": "冰川时代",
      "rules": 100
    },
    {
      "name": "source",
      "alias": "视频来源",
      "display_as": "select",
      "display_data": [
        {
          "option": "土豆",
          "value": "土豆"
        },
        {
          "option": "爱奇艺",
          "value": "爱奇艺"
        },
        {
          "option": "搜狐",
          "value": "搜狐"
        },
        {
          "option": "乐视",
          "value": "乐视"
        }
      ]
    },
    {
      "name": "status",
      "alias": "发布状态",
      "display_as": "radio",
      "display_data": [
        {
          "option": "发布",
          "value": "发布"
        },
        {
          "option": "未发布",
          "value": "未发布"
        }
      ]
    },
    {
      "name": "director",
      "alias": "演员",
      "display_as": "input",
      "rules": 100
    },
    {
      "name": "rules",
      "module_name": "other",
      "alias": "规则",
      "display_as": "inline-reference",
      "display_data": "rules",
      "display_ref": "title"
    },
    {
      "name": "type",
      "alias": "视频类型",
      "display_as": "checkbox",
      "display_data": ["冒险", "爱情", "悬疑"]
    },
    {
      "name": "is_hot",
      "alias": "视频类型",
      "display_as": "single-checkbox",
      "display_data": "是否推荐"
    },
    {
      "name": "categories",
      "module_name": "novels",
      "alias": "分类",
      "display_as": "reference",
      "display_data": "categories",
      "display_ref": "title"
    },
    {
      "name": "folders",
      "module_name": "other",
      "alias": "文件夹",
      "display_as": "inline-reference",
      "display_data": "folders",
      "display_ref": "title"
    },
    {
      "name": "preview",
      "alias": "视频预览",
      "display_as": "image",
      "display_data": "xxx.jpg",
      "rules": "200k"
    },
    {
      "name": "release_time",
      "alias": "上映时间",
      "display_as": "datetime",
      "rules": {
        "start": "2013-02-01",
        "end": "2015-02-01"
      }
    }
  ],
  "ordering": ["release_time"],
  "list_filter_type": "multi-dropdown",
  "list_display": ["title", "source", "status", "type", "director", "release_time"],
  "list_display_link": ["title"],
  "list_editable": ["director"],
  "list_per_page": 10,
  "list_datepicker": "true",
  "search_field": true,
  "fieldsets": {
    "基础选项": ["title", "source", "status", "type", "categories", "release_time", "is_hot"],
    "高级选项": ["type", "status"],
    "Rules": ["rules"],
    "Folder": ["folders"]
  },
  "list_actions": ["add", "delete"],
  "list_table_actions": ["save", "viewDetail"]
}